<div class="container">
    <div class="row">
        <div class ="col-sm-12">
            <h1 id="logo">Eat-em-Burger</h1>
            <img src="/assets/burger.jpg" alt="animated-burger image" class="rounded" >
        </div>
    </div>
    <div class="row">
        <div class ="col-sm-6  burger-name">
            <ul>
             {{#each burgers}}
               {{#unless devoured}}
                  {{> burgers/burger-block devoured=true}}
               {{/unless}}
             {{/each}}
            </ul>
        
        </div>
         <div class ="col-sm-6 devour-burger">
              <ul>
             {{#each burgers}}
               {{#if devoured}}
                  {{> burgers/burger-block devoured=false}}
               {{/if}}
             {{/each}}
            </ul>
            
        </div>
    </div>

    <div class="row">
        <div class = "col-sm-12">
           <form>
            <textarea name="burger"></textarea>

            <button type="submit" class="btn btn-primary mt-3">Submit</button>
           </form> 
        <div>

    </div>
</div>